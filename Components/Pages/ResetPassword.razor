@page "/reset-password"
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject ISnackbar Snackbar
@using BlazorApp.Services
@inject IJSRuntime JS
<PageTitle>Email Verified</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium">
    <MudCard Class="glassmorphism-card-wide pa-6 rounded-lg mt-10" Elevation="0">
        <MudCardHeader Class="d-flex flex-column align-items-center text-center">
            <MudText Typo="Typo.h4" Class="login-title">Email Verified!</MudText>
            <MudText Typo="Typo.subtitle1" Class="mt-2 text-light">
                Your email has been successfully verified.
            </MudText>
        </MudCardHeader>

        <MudCardContent>
            <div class="d-flex justify-content-center mt-4">
                <MudButton Color="Color.Primary" Variant="Variant.Outlined" Href="/login" Class="custom-btn">
                    Login Now
                </MudButton>
            </div>
        </MudCardContent>
    </MudCard>
</MudContainer>

<style>
    .glassmorphism-card-wide {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.15);
        box-shadow: 0px 8px 30px rgba(0, 0, 0, 0.25);
        padding: 2rem;
        max-width: 900px;
        margin: 0 auto;
    }

    .login-title {
        font-size: 26px;
        font-weight: bold;
        letter-spacing: 1px;
        color: #f0f0f0;
    }

    .text-light {
        color: #e0e0e0;
    }

    .custom-btn {
        padding: 10px 50px;
        border-radius: 6px;
        font-weight: bold;
        font-size: 16px;
        color: #dcdcdc !important;
        border: 2px solid rgba(255, 255, 255, 0.3);
        transition: all 0.3s ease;
    }

        .custom-btn:hover {
            background: rgba(255, 255, 255, 0.1);
        }

        .custom-btn.outlined {
            border: 2px solid rgba(255, 255, 255, 0.4);
        }
</style>
